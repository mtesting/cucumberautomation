        </profile>
        <profile>
            <id>Ladbrokes Test2 V3 ATT</id>
            <activation>
                <property>
                    <name>testingEnv</name>
                    <value>TEST2</value>
                </property>
            </activation>
            <properties>
                <att.baseurl>http://wkse15t2xamatt01.wok1.egalacoral.com</att.baseurl>
            </properties>
        </profile>
        <profile>
            <id>Ladbrokes AWS</id>
            <activation>
                <property>
                    <name>testingEnv</name>
                    <value>AWS</value>
                </property>
            </activation>
            <properties>
                <att.baseurl>http://cats-trading.amelco.co.uk/att</att.baseurl>
            </properties>
        </profile>
        <profile>
            <id>PS Staging</id>
            <activation>
                <property>
                    <name>testingEnv</name>
