    </profiles>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.cxf</groupId>
                <artifactId>cxf-codegen-plugin</artifactId>
                <version>${cxf.version}</version>
                <executions>
                    <execution>
                        <id>generate-sources</id>
                        <phase>generate-sources</phase>
                        <configuration>
                            <wsdlOptions>
                                <wsdlOption>
                                    <wsdl>${att.baseurl}/att/ws/scenario?wsdl</wsdl>
                                    <bindingFiles>
                                        <bindingFile>${basedir}/src/main/resources/cxf/binding-scenario.xml
                                        </bindingFile>
                                    </bindingFiles>
                                    <extraargs>
                                        <extraarg>-autoNameResolution</extraarg>
                                        <!-- <extraarg>-xjc-Xcollection-setter-injector</extraarg>-->
                                    </extraargs>
                                </wsdlOption>
                                <wsdlOption>
                                    <wsdl>${att.baseurl}/att/ws/history?wsdl</wsdl>
                                    <bindingFiles>
                                        <bindingFile>${basedir}/src/main/resources/cxf/binding-history.xml</bindingFile>
                                    </bindingFiles>
                                    <extraargs>
                                        <extraarg>-autoNameResolution</extraarg>
                                    </extraargs>
                                </wsdlOption>
                                <wsdlOption>
                                    <wsdl>${att.baseurl}/att/ws/status?wsdl</wsdl>
                                    <bindingFiles>
                                        <bindingFile>${basedir}/src/main/resources/cxf/binding-status.xml</bindingFile>
                                    </bindingFiles>
                                    <extraargs>
                                        <extraarg>-autoNameResolution</extraarg>
                                    </extraargs>
                                </wsdlOption>
                            </wsdlOptions>
                            <fork>always</fork>
                            <additionalJvmArgs>
                                -Djavax.xml.accessExternalSchema=all
                            </additionalJvmArgs>
                        </configuration>
                        <goals>
                            <goal>wsdl2java</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

