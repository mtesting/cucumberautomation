        </profile>
        <profile>
            <id>PS Old Bench</id>
            <activation>
                <property>
                    <name>testingEnv</name>
                    <value>PsOldBench</value>
                </property>
            </activation>
            <properties>
                <att.baseurl>http://iombenampsatt01:8088</att.baseurl>
            </properties>
        </profile>
        <profile>
            <id>PS New Bench</id>
            <activation>
                <property>
                    <name>testingEnv</name>
                    <value>PsNewBench</value>
                </property>
            </activation>
            <properties>
                <att.baseurl>https://bench-trading.csr.pstars</att.baseurl>
            </properties>
        </profile>
        <profile>
            <id>Betfair PPBF</id>
            <activation>
                <property>
                    <name>testingEnv</name>
                    <value>PPBF</value>
                </property>
            </activation>
            <properties>
                <att.baseurl>https://trading-ppbf-algo-att.amelco.co.uk</att.baseurl>
